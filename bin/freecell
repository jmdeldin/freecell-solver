#! /usr/bin/env ruby
$LOAD_PATH << File.expand_path(File.join(File.dirname(__FILE__), "../lib"))

require 'free_cell'

usage = <<EOF
Usage: #{File.basename(__FILE__)} INPUT-FILE
EOF

abort usage unless ARGV.first

reader  = FreeCell::Reader.new(File.open(ARGV.shift))
problem = FreeCell::Problem.new({
  :columns         => reader.columns,
  :num_foundations => reader.num_suits,
  :num_free_cells  => reader.num_free,
})

algo = ARGV.any?? ARGV.shift : reader.algorithm.to_s
klass = algo.capitalize + 'Solver'

solver = if klass == "AstarSolver" then
           FreeCell::AstarSolver.new(problem)
         else
           FreeCell::const_get(klass).new(problem)
         end

# steps, descriptions, show_boards
verbosity = ARGV.any?? ARGV.shift.to_sym : reader.verbosity
solver.send(verbosity)
